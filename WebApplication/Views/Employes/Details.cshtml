@model JobPortalIntranetLibraryClass.modeleFluent.Employe

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Employe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Firstname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Firstname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lastname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lastname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Dateofbirth)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dateofbirth, "_DateDisplay")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Seniority)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seniority)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Biography)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Biography)
        </dd>

        <dt>
            Expériences
        </dt>

        @if (Model.Experiences.Count > 0)
        {
            foreach (var experience in Model.Experiences)
            {
                <dd>
                    @Html.DisplayFor(m => experience.Title) -
                    @Html.DisplayFor(m => experience.Date)
                </dd>
            }
        }
        else
        {
            <dd>L'employé n'a aucune expérience</dd>
        }

        <dt>
            Expériences
        </dt>

        @if (Model.Trainings.Count > 0)
        {
            foreach (var training in Model.Trainings)
            {
                <dd>
                    @Html.DisplayFor(m => training.Title) -
                    @Html.DisplayFor(m => training.Date)
                </dd>
            }
        }
        else
        {
            <dd>L'employé n'a aucun diplome</dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
