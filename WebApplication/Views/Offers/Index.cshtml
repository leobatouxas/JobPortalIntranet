@model IEnumerable<JobPortalIntranetLibraryClass.modeleFluent.Offer>

@{
    ViewBag.Title = "Index";
}

<h2>Offers</h2>
<p>Search for an offer by title, description, responsible</p>
@using (Html.BeginForm("Index", "Offers", FormMethod.Get))
{
    <input type="text" name="searchTerm" />
    <input type="submit" value="Search" class="btn btn-primary" />
}

<p>
    @Html.ActionLink("Create New", "Create", "Offers", new {}, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Statut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Responsible)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Statut.Libelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date, "_DateDisplay")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsible)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Offers", new { id = item.Id },new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Details", "Details", "Offers", new { id = item.Id }, new { @class = "btn btn-secondary" }) 
                @Html.ActionLink("Delete", "Delete", "Offers", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
